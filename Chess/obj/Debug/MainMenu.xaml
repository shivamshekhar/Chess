<Page
    x:Class="Chess.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/chessboard3.png"/>
        </Grid.Background>
        <Image Height="400" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Assets/queen_black.png"/>
        <Image Height="400" Width="400" HorizontalAlignment="Right" VerticalAlignment="Top" Source="Assets/king_white.png"/>
        <Image Height="400" Width="400" HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Assets/knight_white.png"/>
        <Image Height="400" Width="400" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="Assets/rook_black.png"/>
        <TextBlock Text="CHESS" HorizontalAlignment="Center" Margin="0,-250,0,0" Height="200" Width="800" FontSize="186.667" TextAlignment="Center" FontFamily="Old English Text MT" Foreground="Black" FontWeight="Bold"/>
        <Button x:ConnectionId='1' Content="Play" Height="120" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,250,0,0" Background="Black" FontSize="53.333" FontWeight="Bold" FontFamily="Segoe Script"                        />
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" Text="Version 1.0 Made by: Shivam Shekhar" Foreground="Black" FontSize="20" TextAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Page>

